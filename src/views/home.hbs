    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Job Vacancies Data
        const jobVacancies = [
          { puesto: "Cajero", ciudad: "Tegucigalpa", sector: "Restaurante", empresa: "Pizza Bella" },
          { puesto: "Agente de Call Center", ciudad: "San Pedro Sula", sector: "Call Center", empresa: "Hondutel" },
          { puesto: "Barista", ciudad: "Tegucigalpa", sector: "Restaurante", empresa: "Café Central" },
          { puesto: "Soporte Técnico", ciudad: "San Pedro Sula", sector: "Tecnología", empresa: "TechOne" },
          { puesto: "Repartidor", ciudad: "Tegucigalpa", sector: "Restaurante", empresa: "Keko Delivery" },
          { puesto: "Vendedor de Tienda", ciudad: "Tegucigalpa", sector: "Retail", empresa: "Tiendas Econo" },
          { puesto: "Diseñador Gráfico", ciudad: "San Pedro Sula", sector: "Publicidad", empresa: "Agencia Boom" },
          { puesto: "Cocinero", ciudad: "Tegucigalpa", sector: "Restaurante", empresa: "Los Asados" },
          { puesto: "Encargado de Inventario", ciudad: "San Pedro Sula", sector: "Logística", empresa: "Distribuidora Azul" },
          { puesto: "Asistente Administrativo", ciudad: "Tegucigalpa", sector: "Oficina", empresa: "Conti & Asociados" },
        ]

        const jobListingsContainer = document.getElementById("job-listings")
        const searchInput = document.getElementById("search-input")
        const citySelect = document.getElementById("city-select")
        const categorySelect = document.getElementById("category-select")
        const jobCountSpan = document.getElementById("job-count")
        const locationButton = document.getElementById("location-button")

        // Function to render job cards
        function renderJobCards(jobs) {
          jobListingsContainer.innerHTML = "" // Clear previous listings
          if (jobs.length === 0) {
            jobListingsContainer.innerHTML =
              '<p class="text-center text-muted-foreground">No se encontraron vacantes que coincidan con tu búsqueda.</p>'
          } else {
            jobs.forEach((job) => {
              const jobCard = document.createElement("div")
              jobCard.className = "job-card"
              jobCard.innerHTML = `
                          <div class="job-card-header">
                              <h3>${job.puesto}</h3>
                              <p class="job-card-description">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v14Z"/><path d="M12 9v6"/><path d="M9 12h6"/></svg>
                                  ${job.empresa}
                              </p>
                          </div>
                          <div class="job-card-content">
                              <div class="job-card-meta">
                                  <p>
                                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                                      ${job.ciudad}
                                  </p>
                                  <p>
                                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>
                                      ${job.sector}
                                  </p>
                              </div>
                              <button class="button outline">Aplicar</button>
                          </div>
                      `
              jobListingsContainer.appendChild(jobCard)
            })
          }
          jobCountSpan.textContent = jobs.length
        }

        // Function to filter jobs
        function filterJobs() {
          const searchTerm = searchInput.value.toLowerCase()
          const selectedCity = citySelect.value.toLowerCase()
          const selectedCategory = categorySelect.value.toLowerCase()

          const filtered = jobVacancies.filter((job) => {
            const matchesSearch =
              job.puesto.toLowerCase().includes(searchTerm) ||
              job.empresa.toLowerCase().includes(searchTerm) ||
              job.sector.toLowerCase().includes(searchTerm)
            const matchesCity = selectedCity === "" || job.ciudad.toLowerCase() === selectedCity
            const matchesCategory = selectedCategory === "" || job.sector.toLowerCase() === selectedCategory

            return matchesSearch && matchesCity && matchesCategory
          })
          renderJobCards(filtered)
        }

        // Event Listeners for filters
        searchInput.addEventListener("input", filterJobs)
        citySelect.addEventListener("change", filterJobs)
        categorySelect.addEventListener("change", filterJobs)

        // Geolocation Functionality
        locationButton.addEventListener("click", activateLocation)

        function activateLocation() {
          if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
              (position) => {
                const latitude = position.coords.latitude
                const longitude = position.coords.longitude
                alert(
                  `Ubicación detectada: Latitud ${latitude}, Longitud ${longitude}.\n\nPara obtener el nombre de la ciudad automáticamente, se necesitaría una API de geocodificación (ej. Google Maps API, OpenStreetMap Nominatim) que convierta estas coordenadas a un nombre de lugar.`,
                )
                console.log("Ubicación detectada:", { latitude, longitude })

                // Optional: You could try to pre-select a city based on very rough coordinate ranges,
                // but this is highly unreliable without a proper geocoding API.
                // Example (not recommended for production without proper geocoding):
                // if (latitude > 14.0 && latitude < 14.1 && longitude > -87.3 && longitude < -87.1) {
                //   citySelect.value = "Tegucigalpa";
                //   filterJobs();
                // } else if (latitude > 15.4 && latitude < 15.5 && longitude > -88.1 && longitude < -87.9) {
                //   citySelect.value = "San Pedro Sula";
                //   filterJobs();
                // }
              },
              (error) => {
                let errorMessage = "No se pudo obtener tu ubicación."
                switch (error.code) {
                  case error.PERMISSION_DENIED:
                    errorMessage =
                      "Permiso de ubicación denegado. Por favor, habilita los permisos de ubicación en tu navegador."
                    break
                  case error.POSITION_UNAVAILABLE:
                    errorMessage = "Información de ubicación no disponible."
                    break
                  case error.TIMEOUT:
                    errorMessage = "La solicitud para obtener la ubicación ha caducado."
                    break
                  case error.UNKNOWN_ERROR:
                    errorMessage = "Ha ocurrido un error desconocido al intentar obtener la ubicación."
                    break
                }
                alert(errorMessage)
                console.error("Error al obtener la ubicación:", error)
              },
              {
                enableHighAccuracy: true,
                timeout: 5000,
                maximumAge: 0,
              },
            )
          } else {
            alert("Tu navegador no soporta la geolocalización.")
          }
        }

        // Initial render of all jobs
        renderJobCards(jobVacancies)

        // Smooth scrolling for navigation links
        document.querySelectorAll("header nav a, .hero-section .button").forEach((anchor) => {
          anchor.addEventListener("click", function (e) {
            e.preventDefault()
            const targetId = this.getAttribute("href")
            const targetElement = document.querySelector(targetId)
            if (targetElement) {
              targetElement.scrollIntoView({
                behavior: "smooth",
              })
            }
          })
        })

        // Set current year in footer
        document.getElementById("current-year").textContent = new Date().getFullYear()

        // Dark Mode Toggle
        const themeToggle = document.getElementById("theme-toggle")
        const htmlElement = document.documentElement // Use html element for data-theme attribute

        // Check for saved theme preference
        const savedTheme = localStorage.getItem("theme")
        if (savedTheme) {
          htmlElement.setAttribute("data-theme", savedTheme)
        } else {
          // Default to light theme if no preference is saved
          htmlElement.setAttribute("data-theme", "light")
        }

        themeToggle.addEventListener("click", () => {
          const currentTheme = htmlElement.getAttribute("data-theme")
          const newTheme = currentTheme === "dark" ? "light" : "dark"
          htmlElement.setAttribute("data-theme", newTheme)
          localStorage.setItem("theme", newTheme)
        })
      })

        </script>
