  --border: #e5e7eb;
  --card-background: #ffffff;
  --card-border: #e5e7eb;
  --input-background: #ffffff;
  --input-border: #d1d5db;
  --placeholder-color: #9ca3af;
}

/* Dark Mode */
[data-theme="dark"] {
  --background: #000000; /* True black */
  --foreground: #e0e0e0; /* Light gray for text */
  --muted: #0a0a0a; /* Very dark gray for muted sections */
  --muted-foreground: #a0a0a0; /* Medium gray for muted text */
  --primary: #008b3a; /* A brighter purple for dark mode */
  --primary-hover: #7c3aed;
  --border: #1a1a1a; /* Dark gray for borders */
  --card-background: #0a0a0a; /* Slightly lighter than background for cards */
  --card-border: #1a1a1a; /* Darker border for cards */
  --input-background: #0a0a0a;
  --input-border: #2a2a2a;
  --placeholder-color: #71717a;
}

/* Base Styles */
body {
