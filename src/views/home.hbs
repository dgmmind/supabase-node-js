/* Variables CSS para colores */
:root {
  /* Light Mode */
  --background: #ffffff;
  --foreground: #1a1a1a;
  --muted:  #f5f5f5;
  --muted-foreground: #6b7280;
  --primary: #008b3a; /* Un tono de púrpura/azul */
